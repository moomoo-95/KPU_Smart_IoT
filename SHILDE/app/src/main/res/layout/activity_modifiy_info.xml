<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/menu_ico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn"
            android:layout_margin="20dp"
            />
        <TextView
            android:id="@+id/session_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="님"
            android:textStyle="bold"
            android:gravity="right"
            android:layout_margin="20dp"
            android:textColor="@color/colorPrimaryText"
            android:textSize="26sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_rectangle"
        >

            <TextView
                android:id="@+id/user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="님 개인정보"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_margin="20dp"
                android:textColor="@color/colorPrimaryText"
                android:textSize="28sp"
                />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이디 : "
                    android:textSize="25dp"
                    android:layout_margin="5dp"
                    android:padding="7dp"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:height="50dp"
                    android:textColorHint="@color/colorPrimaryText"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이름 : "
                    android:textSize="25dp"
                    android:layout_margin="5dp"
                    android:padding="7dp"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:height="50dp"
                    android:textColorHint="@color/colorPrimaryText"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="암호 : "
                    android:textSize="25dp"
                    android:layout_margin="5dp"
                    android:padding="7dp"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:height="50dp"
                    android:textColorHint="@color/colorPrimaryText"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="암호확인 : "
                    android:textSize="25dp"
                    android:layout_margin="5dp"
                    android:padding="7dp"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:height="50dp"
                    android:textColorHint="@color/colorPrimaryText"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이메일 : "
                    android:textSize="25dp"
                    android:layout_margin="5dp"
                    android:padding="7dp"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:height="50dp"
                    android:textColorHint="@color/colorPrimaryText"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="생년월일 : "
                    android:textSize="25dp"
                    android:layout_margin="5dp"
                    android:padding="7dp"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:height="50dp"
                    android:textColorHint="@color/colorPrimaryText"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="등록시간 : "
                    android:textSize="25dp"
                    android:layout_margin="5dp"
                    android:padding="7dp"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:height="50dp"
                    android:textColorHint="@color/colorPrimaryText"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/modi_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_margin="5dp"
                    android:padding="7dp"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:height="50dp"
                    android:background="@drawable/rounded_rectangle"/>
                <TextView
                    android:id="@+id/modi_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_margin="5dp"
                    android:padding="7dp"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:height="50dp"
                    android:background="@drawable/rounded_rectangle"/>
                <EditText
                    android:id="@+id/modi_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_margin="5dp"
                    android:padding="7dp"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:height="50dp"
                    android:background="@drawable/rounded_rectangle"/>
                <EditText
                    android:id="@+id/modi_pwdC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_margin="5dp"
                    android:padding="7dp"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:height="50dp"
                    android:background="@drawable/rounded_rectangle"/>
                <EditText
                    android:id="@+id/modi_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_margin="5dp"
                    android:padding="7dp"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:height="50dp"
                    android:background="@drawable/rounded_rectangle"/>
                <TextView
                    android:id="@+id/modi_birth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_margin="5dp"
                    android:padding="7dp"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:height="50dp"
                    android:background="@drawable/rounded_rectangle"/>
                <TextView
                    android:id="@+id/modi_REG_DT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_margin="5dp"
                    android:padding="7dp"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:height="50dp"
                    android:background="@drawable/rounded_rectangle"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">
            <Button
                android:id="@+id/mody_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/button_rounded"
                android:clickable="true"
                android:focusable="true"
                android:text="수정"
                android:textColor="@color/colorPrimaryText"
                android:textSize="20dp"
                android:textStyle="bold"
                android:typeface="sans" />
            <Button
                android:id="@+id/mody_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:background="@drawable/button_rounded"
                android:clickable="true"
                android:focusable="true"
                android:text="취소"
                android:textColor="@color/colorPrimaryText"
                android:textSize="20dp"
                android:textStyle="bold"
                android:typeface="sans" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
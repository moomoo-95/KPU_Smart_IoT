<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/menu_ico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn"
            android:layout_margin="20dp"
            />
        <TextView
            android:id="@+id/session_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KPUTEST님"
            android:textStyle="bold"
            android:gravity="right"
            android:layout_margin="20dp"
            android:textColor="@color/colorPrimaryText"
            android:textSize="26sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_rectangle"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KPUTEST님"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_margin="20dp"
                android:textColor="@color/colorPrimaryText"
                android:textSize="28sp"
                />
            <Button
                android:id="@+id/logout"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="로그아웃"
                android:textStyle="bold"
                android:typeface="sans"
                android:layout_margin="20dp"
                android:textColor="@color/colorPrimaryText"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/button_rounded"
                android:textSize="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/my_safety"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="나의 금고 현황"
                android:textStyle="bold"
                android:typeface="sans"
                android:textColor="@color/colorPrimaryText"
                android:layout_margin="20dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/button_rounded"
                android:textSize="25dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/modify_safety"
                android:text="금고 정보 수정하기"
                android:textStyle="bold"
                android:typeface="sans"
                android:textColor="@color/colorPrimaryText"
                android:layout_margin="20dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/button_rounded"
                android:textSize="25dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/modify_info"
                android:text="개인정보 수정"
                android:textStyle="bold"
                android:typeface="sans"
                android:textColor="@color/colorPrimaryText"
                android:layout_margin="20dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/button_rounded"
                android:textSize="25dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/settings"
                android:text="환경설정"
                android:textStyle="bold"
                android:typeface="sans"
                android:textColor="@color/colorPrimaryText"
                android:layout_margin="20dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/button_rounded"
                android:textSize="25dp"
                />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>